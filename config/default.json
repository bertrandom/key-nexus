{
  "hubitat": {
    "host": "hubitat.smittn.com",
    "access_token": "xxx"
  },
  "homeassistant": {
    "host": "homeassistant.smittn.com",
    "port": 8123,
    "webhooks": {
      "toggle_egypt_light": "xxx",
      "turn_on_auroras_night_light_for_30_min": "xxx",
      "toggle_garage_door": "xxx",
      "open_garage_door": "xxx",
      "close_garage_door": "xxx"
    }
  },
  "sonos": {
    "client_id": "xxx",
    "client_secret": "xxx",
    "refresh_token": "xxx",
    "speakers": {
      "bedroom": {
        "groupId": "xxx",
        "playerId": "xxx"
      }
    }
  },
  "openai": {
    "api_key": "xxx"
  },
  "phrases": {
    "chairs_heating_up": "Chairs are heating up, they will be ready in 20 minutes.",
    "chairs_heated_up": "Chairs should be heated up now.",
    "chairs_shutting_down": "Turning off chairs."
  },
  "mapping": {
    "homeassistant": {
      "chairs_heating_up": {
        "module": "sonos",
        "function": "playAudioClip",
        "args": {
          "speaker": "bedroom",
          "phrase": "chairs_heating_up"
        }
      },
      "chairs_heated_up": {
        "module": "sonos",
        "function": "playAudioClip",
        "args": {
          "speaker": "bedroom",
          "phrase": "chairs_heated_up"
        }
      },
      "chairs_shutting_down": {
        "module": "sonos",
        "function": "playAudioClip",
        "args": {
          "speaker": "bedroom",
          "phrase": "chairs_shutting_down"
        }
      }
    },
    "punch": {
      "KEY_GARAGE": {
        "module": "homeassistant",
        "function": "toggleGarageDoor"
      },
      "KEY_GARAGE_OPEN": {
        "module": "homeassistant",
        "function": "openGarageDoor"
      },
      "KEY_GARAGE_CLOSE": {
        "module": "homeassistant",
        "function": "closeGarageDoor"
      }
    },
    "orange3": {
      "KEY_1": {
        "module": "homeassistant",
        "function": "turnOnAurorasNightLight"
      }
    },
    "pivideodrome": {
      "KEY_KP7": {
        "module": "sonos",
        "function": "playPause",
        "args": {
          "speaker": "bedroom"
        }
      },
      "KEY_KP8": {
        "module": "sonos",
        "function": "skipToPreviousTrack",
        "args": {
          "speaker": "bedroom"
        }
      },
      "KEY_KP9": {
        "module": "sonos",
        "function": "skipToNextTrack",
        "args": {
          "speaker": "bedroom"
        }
      },
      "KEY_KP4": {
        "module": "sonos",
        "function": "toggleMute",
        "args": {
          "speaker": "bedroom"
        }
      },
      "KEY_KP5": {
        "module": "sonos",
        "function": "volumeDown",
        "args": {
          "speaker": "bedroom"
        }
      },
      "KEY_KP6": {
        "module": "sonos",
        "function": "volumeUp",
        "args": {
          "speaker": "bedroom"
        }
      }
    }
  }
}
